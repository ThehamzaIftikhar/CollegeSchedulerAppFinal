<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:padding="16dp">

        <Button
            android:id="@+id/button_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/previous"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/addClasses"
            android:layout_width="56dp"
            android:layout_height="66dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/plussign"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="309dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="154dp">


            <EditText
                android:id="@+id/CourseNameTextView"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Course Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/CourseTimeTextView"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Course Time"
                android:inputType="time" />

            <EditText
                android:id="@+id/CourseInstructorTextView"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Course Instructor"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/SubmitClasses"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Submit"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textColorHighlight="#F6EFEF"
                android:textColorLink="#F1D7D7" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>